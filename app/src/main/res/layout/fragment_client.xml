<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_client_id"
    android:orientation="vertical"
    android:background="#15000000"
    tools:context=".view.client.ClientFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Clientes"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_clients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:visibility="visible"
        tools:itemCount="7"
        tools:listitem="@layout/client_view_holder" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lt_client_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:visibility="gone"
        app:lottie_cacheComposition="true"
        app:lottie_loop="true"
        app:lottie_repeatMode="restart"
        app:lottie_url="https://assets10.lottiefiles.com/datafiles/vhvOcuUkH41HdrL/data.json" />

    <TextView
        android:id="@+id/tv_text_lottie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nenhum cliente bebendo :("
        android:textSize="18sp"
        android:visibility="gone" />
</LinearLayout>